.recipe 
	&__title
		font-size 17px 
		text-decoration none 
		color #444
		font-weight bold
		margin-bottom 10px
	&__options	
		position absolute
		bottom 0 
		left 0
		background rgb(253, 131, 131)
		width 100% 
		padding 4px
	&__actions
		position absolute
		top 0 
		right 0
		cursor pointer
		
.recipes
	width 1200px
	margin auto
	&:after
		clear both 
		content ''
		display block		